<div class="page-header">
  <h1>Editing Picture #<%= @picture.id %></h1>
</div>

<%= form_tag(picture_url(@picture), method: 'patch', class: 'form-horizontal', multipart: true) do %>
  <div class="form-group">
    <%= label_tag :image, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= file_field_tag :image %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :caption, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :caption, @picture.caption, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Picture", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
